<p id="notice"><%= notice %></p>

<h1>Listing Iots</h1>

<table>
  <thead>
    <tr>
      <th>Sensor</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @iots.each do |iot| %>
      <tr>
        <td><%= iot.sensor %></td>
        <td><%= iot.value %></td>
        <td><%= link_to 'Show', iot %></td>
        <td><%= link_to 'Edit', edit_iot_path(iot) %></td>
        <td><%= link_to 'Destroy', iot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Iot', new_iot_path %>
